{
  "name": "yomikiri",
  "version": "0.1.3",
  "description": "Web extension to view definition for Japanese words and add to Anki.",
  "private": true,
  "author": "BlueGreenMagick",
  "license": "Custom",
  "url": "https://github.com/bluegreenmagick/yomikiri",
  "type": "module",
  "scripts": {
    "update_dictionary": "pnpm run --dir ./dictionary redownload",
    "construct:dictionary": "pnpm run --dir ./dictionary construct",
    "construct:unidic": "cd ./unidic; cargo run",
    "construct:backend_wasm": "pnpm run --dir ./rust wasm",
    "construct:backend_ios": "pnpm run --dir ./rust ios",
    "construct:backend": "pnpm run construct:backend_wasm && pnpm run construct:backend_ios",
    "construct:web": "pnpm run construct:dictionary && pnpm run construct:unidic && pnpm run construct:backend_wasm && pnpm run construct:licenses",
    "construct:all": "pnpm run construct:web && pnpm construct:backend_ios",
    "generate-licenses": "pnpm run --dir ./extra/generate-license generate",
    "build:firefox": "pnpm run --dir ./main build:firefox",
    "build:chrome": "pnpm run --dir ./main build:chrome",
    "build:ios": "pnpm run --dir ./main build:ios",
    "dev:firefox": "pnpm run --dir ./main dev:firefox",
    "dev:chrome": "pnpm run --dir ./main dev:chrome",
    "dev:ios": "pnpm run --dir ./main dev:ios",
    "dev": "pnpm run dev:chrome",
    "check": "pnpm run -r check",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-regexp": "^2.4.0",
    "eslint-plugin-svelte": "2.36.0-next.13",
    "globals": "^15.0.0",
    "svelte-eslint-parser": "0.34.0-next.12",
    "typescript-eslint": "^7.5.0"
  }
}