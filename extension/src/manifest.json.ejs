<%#
  v2 is not supported for ios because it requires declarative_net_requests api
-%>
{
  "manifest_version": <%- v2 ? 2 : 3 %>,
  "name": "Yomikiri",
  "version": "0.0.1",
  "description": "Web extension to view definition for Japanese words and add to Anki.",
  "author": "BlueGreenMagick",
  "icons": {
    "48": "res/assets/static/images/icon48.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "res/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "match_about_blank": true,
      "run_at": "document_end"
    }
  ],
  "background": {
<% if (firefox || ios || v2) { -%>
    "scripts": [
      "res/background.js"
    ],
    "persistent": false
<% } else { -%>
    "service_worker": "res/background.js"
<% } -%>
  },
<% if (v2) { -%>
  "browser_action": {
<% } else { -%>
  "action": {
<% } -%>
    "default_icon": {
      "48": "res/assets/static/images/icon48.png"
    },
    "default_title": "Yomikiri",
    "default_popup": "res/popup.html"
  },
  "options_ui": {
    "page": "res/options.html",
    "open_in_tab": true
  },
<% if (ios) { -%>
  "declarative_net_request": {
    "rule_resources" : [{
      "id": "redirect_rule",
      "enabled": true,
      "path": "res/assets/static/redirect_rules.json"
    }]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "res/x-callback.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
<% } -%>
  "permissions": [
<% if (ios) { -%>
    "nativeMessaging",
    "declarativeNetRequest",
<% } -%>
    "storage"
  ],
  "optional_permissions": [],
<% const csp = "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"; -%>
<% if (v2) { -%>
  "content_security_policy": "<%- csp %>"
<% } else { -%>
  "content_security_policy": {
    "extension_pages": "<%- csp %>"
  }
<% } -%>
}