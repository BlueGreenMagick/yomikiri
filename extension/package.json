{
  "name": "@yomikiri/extension",
  "version": "0.0.1",
  "description": "Web extension to view definition for Japanese words and add to Anki.",
  "author": "BlueGreenMagick",
  "license": "MIT",
  "scripts": {
    "_build": "f() { rimraf build ; cross-env NODE_ENV=$1 TARGET_PLATFORM=$2 node esbuild.config.mjs; }; f",
    "build:desktop": "yarn run _build production desktop",
    "build:ios": "yarn run _build production ios",
    "build": "yarn run build:desktop",
    "dev:desktop": "yarn run _build development desktop",
    "dev:ios": "yarn run _build development ios",
    "dev": "yarn run dev:desktop",
    "types": "svelte-check",
    "run:firefox": "yarn web-ext run -s ./build --devtools"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.233",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/pako": "^2.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.18",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-svelte": "^0.7.3",
    "rimraf": "^5.0.0",
    "svelte": "^3.58.0",
    "svelte-check": "^3.2.0",
    "svelte-preprocess": "^5.0.3",
    "typescript": "^5.0.4",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "pako": "^2.1.0",
    "@yomikiri/yomikiri-rs": "^0.1.0"
  }
}