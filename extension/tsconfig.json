{
    "compilerOptions": {
      "target": "es2017",
      "module":"ES6",
      "moduleResolution": "node",
      "rootDir": "src",
      "baseUrl": "src",
      "outDir": "dist",
      "lib": ["es2015", "es2016", "es2017", "DOM", "DOM.Iterable", "ES2020.Promise"],
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "strict": true, 
      "verbatimModuleSyntax": true,
      // https://esbuild.github.io/content-types/#typescript-caveats
      "isolatedModules": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "../node_modules/@types",
        "./src/global.d.ts"
      ],
      "paths": {
        "~/*": ["./*"],
        "@icons/*": ["assets/icons/*"],
        "@platform": ["platform/desktop/index"],
        "@platform/*": ["platform/desktop/*"]
      }
    },
    "include": ["src"],
    "exclude": ["../tokenizer"],
  }