{
    "compilerOptions": {
      "target": "es6",
      "module":"ESNext",
      "moduleResolution": "node",
      "rootDir": "src",
      "baseUrl": "src",
      "outDir": "dist",
      "lib": ["es2015", "es2016", "es2017", "DOM", "DOM.Iterable"],
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "strict": true, 
      "verbatimModuleSyntax": true,
      // https://esbuild.github.io/content-types/#typescript-caveats
      "isolatedModules": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "typeRoots": [
        "../node_modules/@types",
        "./src/global.d.ts"
      ],
    },
    "include": ["src"],
    "exclude": ["../tokenizer"]
  }