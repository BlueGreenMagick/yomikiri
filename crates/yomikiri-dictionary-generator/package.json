{
  "name": "@yomikiri/dictionary-generator-rs",
  "version": "0.0.1",
  "scripts": {
    "format": "cargo fmt",
    "check": "cargo check",
    "lint": "cargo clippy -- -D warnings",
    "test": "cargo test",
    "generate": "cargo run -- generate --jmdict='./jmdict/jmdict_english.xml' --out='./files/english.yomikiridict'",
    "download": "cargo run -- download --out='./jmdict/jmdict_english.xml' --version=\"v$(pnpm -w run --silent print-version)\"",
    "fresh": "cargo run -- download --out='./jmdict/jmdict_english.xml' --new",
    "download-and-generate": "pnpm download && pnpm generate"
  }
}