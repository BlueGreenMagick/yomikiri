{
  "name": "@yomikiri/main",
  "version": "0.0.1",
  "description": "Yomikiri is a Japanese immersion learning tool.",
  "author": "BlueGreenMagick",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "_build": "f() { cross-env NODE_ENV=$1 TARGET_PLATFORM=$2 tsx esbuild.config.ts; }; f",
    "build:firefox": "pnpm run _build production firefox",
    "build:chrome": "pnpm run _build production chrome",
    "build:safari_desktop": "pnpm run _build production safari_desktop",
    "build:ios": "pnpm run _build production ios",
    "build:iosapp": "pnpm run _build production iosapp",
    "build": "pnpm run build:chrome",
    "dev:chrome": "pnpm run _build development chrome",
    "dev:firefox": "pnpm run _build development firefox",
    "dev:safari_desktop": "pnpm run _build development safari_desktop",
    "dev:ios": "pnpm run _build development ios",
    "dev": "pnpm run dev:chrome",
    "run:firefox": "pnpm web-ext run -s ./build --devtools",
    "lint": "svelte-check --compiler-warnings \"a11y-no-noninteractive-tabindex:ignore,a11y-click-events-have-key-events:ignore\"",
    "test": "pnpm jest"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.3.63",
    "@swc/jest": "^0.2.26",
    "@types/chrome": "^0.0.233",
    "@types/ejs": "^3.1.2",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/pako": "^2.0.0",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.9",
    "esbuild": "^0.17.18",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-svelte": "^0.7.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^4.0.1",
    "svelte-check": "^3.2.0",
    "svelte-preprocess": "^5.0.3",
    "tsx": "^4.7.1",
    "typescript": "^5.0.4",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "@yomikiri/dictionary": "workspace:*",
    "@yomikiri/generate-license": "workspace:*",
    "@yomikiri/yomikiri-rs": "workspace:*",
    "normalize.css": "^8.0.1",
    "svelte": "^3.58.0",
    "svelte-french-toast": "^1.0.4"
  }
}