<%#
  # Variables
  ## Properties
  - version: string
  ## Target
    - v2: boolean
    - chrome: boolean
    - firefox: boolean
    - safari_desktop: boolean
    - desktop: boolean
    - ios: boolean

  # Notes
  v2 is not supported for ios because it requires declarative_net_requests api
-%>
{
  "manifest_version": <%- v2 ? 2 : 3 %>,
  "name": "Yomikiri",
  "version": "<%- version %>",
  "description": "Look up definitions for Japanese words you encounter on the web. Add the word to Anki.",
  "author": "BlueGreenMagick",
  "icons": {
    "128": "res/assets/static/images/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "res/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "match_about_blank": true,
      "run_at": "document_end"
    }
  ],
  "background": {
<% if (firefox || ios || v2) { -%>
    "scripts": [
      "res/background.js"
    ],
    "persistent": false
<% } else { -%>
    "service_worker": "res/background.js"
<% } -%>
  },
<% if (v2) { -%>
  "browser_action"
<% } else { -%>
  "action"
<% } -%>: {
    "default_icon": {
      "128": "res/assets/static/images/icon128.png"
    },
    "default_title": "Yomikiri",
    "default_popup": "res/popup.html"
  },
<% if (!ios) { -%>
  "options_ui": {
    "page": "res/options.html",
    "open_in_tab": true
  },
<% } -%>
<% if (ios) { -%>
  "declarative_net_request": {
    "rule_resources" : [{
      "id": "redirect_rule",
      "enabled": true,
      "path": "res/assets/static/redirect_rules.json"
    }]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "res/x-callback.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
<% } -%>
  "permissions": [
    "tts",
<% if (ios) { -%>
    "nativeMessaging",
    "declarativeNetRequestWithHostAccess",
<% } -%>
    "storage"
  ],
  "optional_permissions": [],
<% if (ios) { -%>
  "host_permissions": ["*://*.bluegreenmagick.com/*"],
<% } -%>
<% const csp = "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"; -%>
<% if (v2) { -%>
  "content_security_policy": "<%- csp %>"
<% } else { -%>
  "content_security_policy": {
    "extension_pages": "<%- csp %>"
  }
<% } -%>
}